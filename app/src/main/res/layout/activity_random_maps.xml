<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".RandomMaps">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/backViewMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="1.25"
        android:scaleY="1.25"
        android:src="@drawable/animated_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/backgroundSelector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/backViewRandomSelect"
        app:srcCompat="@drawable/map_select" />

    <ImageView
        android:id="@+id/firstMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="@+id/backgroundSelector"
        app:layout_constraintStart_toStartOf="@+id/backgroundSelector"
        app:layout_constraintTop_toTopOf="@+id/backgroundSelector"
        app:srcCompat="@drawable/map_champidrome_icon" />

    <ImageView
        android:id="@+id/thirdMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/backgroundSelector"
        app:layout_constraintEnd_toEndOf="@+id/backgroundSelector"
        app:layout_constraintStart_toStartOf="@+id/backgroundSelector"
        app:srcCompat="@drawable/map_piste_aux_delices_icon" />

    <ImageView
        android:id="@+id/secondMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/backgroundSelector"
        app:layout_constraintEnd_toEndOf="@+id/backgroundSelector"
        app:layout_constraintStart_toStartOf="@+id/backgroundSelector"
        app:layout_constraintTop_toTopOf="@+id/backgroundSelector"
        app:srcCompat="@drawable/map_temple_thwomp_icon" />

    <ImageView
        android:id="@+id/strokeSelector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/backgroundSelector"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/backgroundSelector"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/map_select_contour" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/reSelectButton"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/ic_bouton"
        android:fontFamily="@font/mario_kart_f2"
        android:shadowColor="#000000"
        android:shadowRadius="20"
        android:text="Reselectionner"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textStyle="normal"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textMapName"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/textMapName"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/fond_texte_map"
        android:fontFamily="@font/baijamjuree_regular"
        android:padding="10dp"
        android:text=" "
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backgroundSelector"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/cupIcon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="-15dp"
        android:layout_marginEnd="-60dp"
        app:layout_constraintEnd_toStartOf="@+id/textMapName"
        app:layout_constraintTop_toTopOf="@+id/textMapName"
        app:srcCompat="@mipmap/ic_launcher8_foreground" />

</androidx.constraintlayout.widget.ConstraintLayout>